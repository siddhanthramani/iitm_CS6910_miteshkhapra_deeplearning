{
    "method": "grid",
    "metric": {
        "name": "test_accuracy",
        "goal": "maximize"
    },
    "parameters": {
        "epochs": {
            "values": [50]
        },
        "batch_size": {
            "values": [0, 64]
        },
        "loss": {
            "values": ["cross_entropy"]
        },
        "weight_init": {
            "values": ["xavier"]
        },
        "weight_init_multiplication_factor": {
            "values": [1]
        },
        "optimizer": {
            "values": ["momentum_gradient_descent"
                        , "nestrov_accelerated_gradient_descent", "rmsprop"
                        , "adam"]
        },
        "learning_rate": {
            "values": [1e-2, 1e-5]
        },
        "beta": {
            "values": [0.9]
        },
        "beta1": {
            "values": [0.9]
        },
        "beta2": {
            "values": [0.99]
        },
        "epsilon": {
            "values": [1e-8]
        },
        "weight_decay": {
            "values": [0, 0.00005]
        },
        "number_of_hidden_layers":{
            "values" : [1, 5]
        },
        "size_of_every_hidden_layer": {
            "values": [16, 64]
        },
        "activation_function": {
            "values" : ["logistic", "tanh", "relu"]
        }
    }
}
